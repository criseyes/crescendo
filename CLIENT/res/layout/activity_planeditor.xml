<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/str_planEditor_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

 

      

        <EditText
            android:id="@+id/editTile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="input plan name" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/editStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/str_planEditor_startdate"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="2010/01/01"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/str_planEditor_endDate"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="2010/12/31"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/str_planEditor_repeatPeriod"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >


                   
            <ToggleButton
                android:id="@+id/button_mon"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:minWidth="35dip"
                android:textOn="@string/str_monday"
                android:textOff="@string/str_monday" />

            <ToggleButton
                android:id="@+id/button_thus"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dip"
                
                android:textOn="@string/str_tuesday" 
                android:textOff="@string/str_tuesday"/>



            <ToggleButton
                android:id="@+id/button_wed"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dip"
                
                android:textOn="@string/str_wednesday"
                android:textOff="@string/str_wednesday" />

            <ToggleButton
                android:id="@+id/button_thur"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dip"
                
                android:textOn="@string/str_thursday"
                android:textOff="@string/str_thursday" />

            <ToggleButton
                android:id="@+id/button_fri"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dip"
                
                android:textOn="@string/str_friday"
                android:textOff="@string/str_friday" />

            <ToggleButton
                android:id="@+id/button_sat"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:minWidth="35dip"
                android:textOn="@string/str_saturday"
                android:textOff="@string/str_saturday" />

            <ToggleButton
                android:id="@+id/button_sun"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:minWidth="35dip"
                android:textOn="@string/str_sunday"
                android:textOff="@string/str_sunday" />

        </LinearLayout>

        <Button
            android:id="@+id/planeditor_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/str_save" />

    </LinearLayout>

</FrameLayout>